{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "files": {
    "ignore": [
      "./dist",
      ".astro",
      "node_modules",
      "**/.wrangler/**",
      "**/tamagui.css",
      "**/workbox*.js",
      "**/sw*.js",
      "**/service-worker.js",
      "**/fallback*.js",
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/ios/**",
      "**/.git/**",
      "**/.vscode/**",
      "**/.android/**",
      "**/.DS_Store/**",
      "**/Thumbs.db/**",
      "**/.tamagui*",
      "**/.next*"
    ],
    "ignoreUnknown": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "tab",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120,
    "attributePosition": "auto",
    "ignore": [
      "node_modules/**",
      "**/.astro/",
      "**/node_modules/",
      "**/dist/",
      "**/bun.lockb",
      "**/dist",
      "**/node_modules",
      "**/vercel.json",
      "**/.astro",
      "**/.husky",
      "**/*-lock.*",
      "**/__coverage__",
      "**/.changeset",
      "**/.github",
      ".vscode",
      ".next",
      ".vercel",
      ".env",
      ".changeset",
      ".husky",
      "node_modules",
      ".astro",
      "build",
      "dist",
      "routeTree.gen.ts",
      "templates/turborepo-essential/*"
    ]
  },
  "organizeImports": { "enabled": true },
  "linter": {
    "rules": {
      "a11y": { "recommended": true },
      "complexity": { "recommended": true },
      "correctness": { "recommended": true },
      "nursery": { "recommended": true },
      "performance": { "recommended": true },
      "security": { "recommended": true },
      "style": { "recommended": true },
      "suspicious": { "recommended": true }
    },
    "ignore": [
      ".vscode",
      ".next",
      ".vercel",
      ".wrangler",
      ".content-types",
      ".env",
      ".changeset",
      ".husky",
      "node_modules",
      "build",
      "**/*-lock.*",
      "dist",
      "templates/turborepo-essential/*",
      "routeTree.gen.ts",
      ".astro"
    ]
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "none",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "quoteStyle": "single",
      "attributePosition": "auto"
    },
    "parser": { "unsafeParameterDecoratorsEnabled": true }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 80,
      "lineEnding": "lf",
      "quoteStyle": "double"
    }
  },
  "json": {
    "parser": { "allowComments": true },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 80
    }
  },
  "extends": [],
  "overrides": [
    { "include": ["*.svg"] },
    { "include": ["*.astro"] },
    {
      "include": [".*", "*.json", "*.md", "*.toml", "*.yml"],
      "formatter": { "indentStyle": "space" }
    },
    { "include": ["*.md", "*.mdx"], "formatter": { "lineWidth": 80 } }
  ]
}
